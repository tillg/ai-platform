    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Test Commons",
            "type": "debugpy",
            "request": "launch",
            "module": "unittest",
            "console": "integratedTerminal",
            "args": [
                "discover", // Optional: Use discover to auto-find tests
                "ai_commons_tests" // Pattern to match test files
            ],
            "cwd": "${workspaceFolder}/src" // Set the current working directory
        },
        {
            "name": "Python Debugger: Test Workspaces",
            "type": "debugpy",
            "request": "launch",
            "module": "unittest",
            "console": "integratedTerminal",
            "args": [
                "discover", // Optional: Use discover to auto-find tests
                "ai_workspace_tests" // Pattern to match test files
            ],
            "cwd": "${workspaceFolder}/src" // Set the current working directory
        }
    ]
}